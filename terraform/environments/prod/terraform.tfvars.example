# Production Environment Configuration
# terraform/environments/prod/terraform.tfvars

# REQUIRED: Replace with your values
aws_region = "us-west-2"  # Change to your preferred region
environment = "prod"

# REQUIRED: Replace with your Docker image URI
# Build and push your image first: docker build -t <account-id>.dkr.ecr.<region>.amazonaws.com/incident-responder:latest .
incident_responder_image = "<account-id>.dkr.ecr.<region>.amazonaws.com/incident-responder:latest"

# REQUIRED: Set via environment variable TF_VAR_openai_api_key
# openai_api_key = "your-openrouter-api-key"

# REQUIRED: Set via environment variable TF_VAR_grafana_admin_password  
# grafana_admin_password = "your-secure-password-12chars"

# Optional: Customize resource naming
name_prefix = "prod-incident-responder"

# Optional: Add custom tags
common_tags = {
  Project     = "incident-responder"
  Environment = "prod"
  ManagedBy   = "terraform"
  Owner       = "your-team"
}
